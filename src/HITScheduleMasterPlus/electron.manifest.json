{
  "executable": "HITScheduleMasterPlus",
  "splashscreen": {
    "imageFile": ""
  },
  "singleInstance": false,
  "build": {
    "appId": "com.hcgstudio.HITScheduleMaster.app",
    "productName": "HITScheduleMasterPlus",
    "copyright": "Copyright Â© HCGStudio 2020",
    "buildVersion": "0.1.3",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "win": {
      "icon": "../../../icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "icon": "../../../ic
      
      on.icns"
    },
    "linux":{
      "icon": "../../../icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64" ]
        },
        {
          "target": "deb",
          "arch": ["x64" ]
        },        
        {
          "target": "pacman",
          "arch": ["x64" ]
        },
        {
          "target": "tar.gz",
          "arch": ["x64" ]
        }
      ]
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": ["**/*"]
      },
      "**/*"
    ]
  }
}